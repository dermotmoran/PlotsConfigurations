root -q -b 'scripts/PlotKD.C("H0M","prefit","SRVBF2",1,0,1)'
root -q -b 'scripts/PlotKD.C("H0M","prefit","SRVH1",1,0,1)' 
root -q -b 'scripts/PlotKD.C("H0M","prefit","SRVH2",1,0,1)'

root -q -b 'scripts/PlotKD.C("H0PH","prefit","SRVBF1",1,0,0)' 
